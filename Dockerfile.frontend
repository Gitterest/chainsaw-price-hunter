# Stage 1: Build Next.js web frontend
FROM node:20 AS builder
WORKDIR /app
COPY ./frontend/package*.json ./
RUN npm install --force
COPY ./frontend ./
RUN npm run build

# Stage 2: Serve with Nginx
FROM nginx:alpine
COPY --from=builder /app/.next /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

